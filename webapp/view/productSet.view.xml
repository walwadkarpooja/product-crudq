<mvc:View controllerName="crudqproduct.controller.productSet"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    >
    <Page id="page" title="{i18n>title}">
        <content>
        <form:SimpleForm>
            <form:content>
                <Label text="{i18n>productId}" />
                <Input placeholder="Enter Product Id" suggestionItems="{/productSet}" showSuggestion="true" showClearIcon="true" submit="onSubmit" >
                    <suggestionItems >
                        <core:Item text="{Productid}"/>
                    </suggestionItems>
                </Input>

                <!-- <Text text="{jModel>/Productid}" id="prodVisible" /> -->
            </form:content>
        </form:SimpleForm>
        <form:SimpleForm>
            <form:content>
                

                <Label text="product id" id="prodVisible" />
                <Input value="{jModel>/Productid}"/>
            </form:content>
        </form:SimpleForm>
        </content>
    </Page>
</mvc:View>